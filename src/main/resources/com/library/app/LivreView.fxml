<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.library.app.controller.LivreController">
    
    <HBox spacing="10">
        <TextField fx:id="titreField" promptText="Titre"/>
        <TextField fx:id="auteurField" promptText="Auteur"/>
        <TextField fx:id="anneeField" promptText="Année"/>
        <TextField fx:id="isbnField" promptText="ISBN"/>
        <Button text="Ajouter" onAction="#handleAjouterLivre"/>
        <Button text="Modifier" onAction="#handleModifierLivre"/>
        <Button text="Supprimer" onAction="#handleSupprimerLivre"/>
        <Button text="Effacer" onAction="#handleClearFields"/>
    </HBox>
    
    <HBox spacing="10">
        <ComboBox fx:id="searchCriteria" prefWidth="100"/>
        <TextField fx:id="searchField" promptText="Recherche"/>
        <Button text="Rechercher" onAction="#handleRechercher"/>
    </HBox>
    
    <Label fx:id="statsLabel"/>
    
    <TableView fx:id="livresTable" onMouseClicked="#handleTableSelection">
        <columns>
            <TableColumn fx:id="titreColumn" text="Titre" prefWidth="200"/>
            <TableColumn fx:id="auteurColumn" text="Auteur" prefWidth="150"/>
            <TableColumn fx:id="anneeColumn" text="Année" prefWidth="80"/>
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="150"/>
            <TableColumn fx:id="disponibleColumn" text="Disponible" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>