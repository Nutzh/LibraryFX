<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.app.controller.MainController">

    <!-- LEFT MENU -->
    <left>
        <VBox spacing="15" style="-fx-padding:20; -fx-background-color:#f0f0f0;">
            <Label text="Menu" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-padding:0 0 10 0;"/>
            <Button text="Livres" onAction="#showLivres" 
                    style="-fx-background-color:#2196F3; -fx-text-fill:white; -fx-pref-width:150; -fx-pref-height:35;"/>
            <Button text="Membres" onAction="#showMembres"
                    style="-fx-background-color:#4CAF50; -fx-text-fill:white; -fx-pref-width:150; -fx-pref-height:35;"/>
            <Button text="Emprunts" onAction="#showEmprunts"
                    style="-fx-background-color:#FF9800; -fx-text-fill:white; -fx-pref-width:150; -fx-pref-height:35;"/>
        </VBox>
    </left>

   
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color:white; -fx-padding:20;"/>
    </center>

</BorderPane>
