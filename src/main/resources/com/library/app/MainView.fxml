<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.app.controller.MainController">

    <!-- LEFT MENU -->
    <left>
        <VBox spacing="15" style="-fx-padding:20;">
            <Button text="Livres"     onAction="#showLivres"/>
            <Button text="Membres"    onAction="#showMembres"/>
            <Button text="Emprunts"   onAction="#showEmprunts"/>
        </VBox>
    </left>

   
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color:white; -fx-padding:20;"/>
    </center>

</BorderPane>
